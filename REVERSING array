#include <iostream>

using namespace std;
void reverse(int a[],int n){
    
    cout<<"Reverse is: ";
    
    int b[7]; //TO store elements of A in B --in reverse order
    
    for(int i=0;i<n;i++){
        b[6-i]=a[i];   //Storing elements of ARRay A in ARRay B---
    }
      for(int j=0;j<n;j++){
          cout<<" "<<b[j]; 
          
      }
}
int main()
{
   int a[7]={1,2,3,4,5,6,7};
   reverse(a,7); //CALLING FUNCTION

    return 0;
}
